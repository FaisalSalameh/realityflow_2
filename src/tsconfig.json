{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./node/server/bld",
        "lib": [ "es6" ]
    },
    "exclude": [
        "**/node_modules",
        "**web-client"
    ],
    "include": [
        "./**/*"
    ]
}